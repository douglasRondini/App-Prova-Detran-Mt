<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bcground_Fundo"
    android:orientation="vertical"
    tools:context=".presenter.ui.ListAlunosFragment">

    <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/edt_borda_verd_fundo_transparente"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:src="@drawable/ic_arrow_back_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lista  de Alunos"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginStart="50dp"/>

        </LinearLayout>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_search_list_24"
        android:layout_margin="16dp"
        android:hint="Digite uma Data de Prova"/>
    <ListView
        android:id="@+id/listV_list_Alunos"
        android:layout_width="match_parent"
        tools:listitem="@layout/item_adapter"
        android:layout_height="match_parent"/>


</LinearLayout>