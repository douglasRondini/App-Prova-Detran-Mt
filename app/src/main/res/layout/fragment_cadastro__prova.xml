<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bcground_Fundo"
    tools:context=".presenter.ui.cadastro_ProvaFragment">

    <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/edt_borda_verd_fundo_transparente"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_backCadastroAlunos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:src="@drawable/ic_arrow_back_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cadastre seus Alunos "
                android:textSize="20sp"
                android:layout_marginStart="50dp"/>

        </LinearLayout>

    <EditText
        android:id="@+id/edt_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="Digite o nome e sobrenome do aluno"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/edt_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:inputType="date"
        android:hint="Digite a data da prova"
        android:layout_margin="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox

            android:id="@+id/cb_1_vez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1Â° vez"
            android:maxLines="1"
            android:layout_margin="16dp"/>
        <CheckBox
            android:id="@+id/cb_reteste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reteste"
            android:maxLines="1"
            android:layout_margin="16dp"/>
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Cadastrar"
        android:textSize="18dp"
        android:background="@drawable/edt_borda_verd_fundo_transparente"/>




</LinearLayout>